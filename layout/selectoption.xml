<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fbd1f7">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="347dp"
        android:layout_height="98dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01"></LinearLayout>

    <Button
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="chat"
        android:id="@+id/button"
        android:background="@drawable/shape"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"></FrameLayout>

    <Button
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="search links"
        android:id="@+id/button2"
        android:background="@drawable/shape"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"></FrameLayout>

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:layout_weight="0.08"
        android:layout_gravity="center_horizontal"
        android:textColor="#d91b8a"
        android:textAlignment="center" />

    <TextView
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:layout_weight="0.08"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#b43053" />

    <TextView
        android:id = "@+id/text"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text = "if you need to CHAT,click the number after displayed!!!"
        android:enabled="true"
        android:nestedScrollingEnabled="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#800e0e"
        android:visibility="visible"
        android:textStyle="bold|italic"
        android:layout_weight="0.10"
        android:layout_gravity="center_horizontal" />
</LinearLayout>