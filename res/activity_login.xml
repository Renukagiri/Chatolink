<?xml version="1.0" encoding="UTF-8"?>


<LinearLayout android:weightSum="1"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:textSize="30sp"
        android:text="ChatoLink"

        android:textColor="#098b07"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic" />

    <EditText
        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Email"
        android:textColorHighlight="#000000"
        android:id="@+id/etEmail"

        android:singleLine="true" android:inputType="textEmailAddress"/>

    <EditText
        android:layout_height="59dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColorHighlight="#000000"
        android:hint="Password"
        android:id="@+id/etPass" android:inputType="textPassword"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:layout_gravity="center_horizontal" />

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:text="Login"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f9a8b6"
        android:textColor="#000000"
        android:id="@+id/btnLogin"
        android:onClick="login"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:text="No account yet? Register"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnReg"
        android:background="#f9a8b6"
        android:textColor="#000000"
        android:onClick="register"/>


</LinearLayout>