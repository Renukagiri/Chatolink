<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bgg"
    xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#098b07" android:padding="20dp" android:textSize="30sp" android:text="ChatoLink" android:layout_marginTop="50dp" android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic" />

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"  android:hint="Email" android:id="@+id/etEmail" android:singleLine="true" android:inputType="textEmailAddress"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"  android:hint="Password" android:id="@+id/etPass" android:singleLine="true" android:inputType="textPassword"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="374dp"
        android:layout_height="32dp"></LinearLayout>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:text="Register"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f9a8b6"
        android:textColor="#000000"
        android:id="@+id/btnReg" android:onClick="register"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Back to Login"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f9a8b6"
        android:textColor="#000000"
        android:id="@+id/login"
        android:layout_gravity="center_horizontal" />

</LinearLayout>